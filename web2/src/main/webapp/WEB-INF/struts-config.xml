<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>

   <form-beans>
        <form-bean name="actionForm"
                   type="com.example.billing.nigc.action.test.ActionForm"/>
    </form-beans>

    <action-mappings>
        <action path="/index" name="actionForm"
                type="com.example.billing.nigc.action.test.LoginAction">
            <forward name="success" path="/index.jsp"/>
        </action>
    </action-mappings>
    <controller>
        <set-property property="processorClass" value="com.example.billing.nigc.action.test.CustomProcessor"/>
    </controller>

<!--    <controller>
        <set-property property="processorClass" value="com.smalik.common.CustomProcessor"/>
